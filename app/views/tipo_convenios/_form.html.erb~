<%= form_for(@tipo_convenio) do |f| %>
  <% if @tipo_convenio.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@tipo_convenio.errors.count, "error") %> prohibited this tipo_convenio from being saved:</h2>

      <ul>
      <% @tipo_convenio.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :nombre %><br />
    <%= f.text_field :nombre %>
  </div>
  <div class="field">
    <%= f.label :descripcion %><br />
    <%= f.text_field :descripcion %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
