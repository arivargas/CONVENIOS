<h1>Becas disponibles</h1>

<table>
  <tr>
    <th>Titulo</th>
    <th>Institucion</th>
    <th>Duracion</th>
    <th>Periodo</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @becas.each do |beca| %>
  <tr>
    <td><%= beca.titulo %></td>
    <td><%= beca.institucion %></td>
    <td><%= beca.duracion %></td>
    <td><%= beca.periodo %></td>
    <td><%= link_to 'Mostrar más información', beca %></td>
    <td><%= link_to 'Modificar', edit_beca_path(beca) %></td>
    <td><%= link_to 'Eliminar', beca, method: :delete, data: { confirm: 'Desea borrar la beca?' } %></td>
  </tr>
<% end %>
</table>

