<%= simple_form_for @beca do |f| %>

  <% if @beca.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@beca.errors.count, "error") %> prohibited this beca from being saved:</h2>

      <ul>
      <% @beca.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :título %><br />
    <%= f.text_field :titulo, :required => true, :placeholder => 'Escriba el título de la beca' %>
  </div>
  <div class="field">
    <%= f.label :institución %><br />
    <%= f.text_field :institucion, :required => true, :placeholder => 'Escriba el nombre de la institucion/universidad que brinda la beca' %>
  </div>
  <div class="field">
    <%= f.label :duración %><br />
    <%= f.text_field :duracion, :required => true, :placeholder => 'Escriba la duración de la beca', :hint => 'Ej: 1 año.' %>
  </div>
  <div class="field">
    <%= f.label :periodo %><br />
    <%= f.text_field :periodo, :required => true, :placeholder => 'Escriba a partir de que período institucional empieza la beca', hint => 'Ej: Segundo Semestre 2015.' %>
  </div>
  <div class="field">
    <%= f.label :programa %><br />
    <%= f.text_field :programa %>
  </div>
  <div class="field">
    <%= f.label :modalidad %><br />
    <%= f.text_field :modalidad %>
  </div>
  <div class="field">
    <%= f.label :idioma %><br />
    <%= f.text_field :idioma %>
  </div>
  <div class="field">
    <%= f.label :beneficios %><br />
    <%= f.text_field :beneficios %>
  </div>
  <div class="field">
    <%= f.label :requisitos %><br />
    <%= f.text_field :requisitos %>
  </div>
  <div class="field">
    <%= f.label :fecha_límite %><br />
    <%= f.date_select :fch_limite %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
